<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecuritySystemApp.MainPage"
             Background="White">
    <VerticalStackLayout
            Padding="20,0"
            Spacing="25">
            <Image />
            <Button
                x:Name="LoginBtn"
                Text="Login" 
                HorizontalOptions="Fill" 
                Background="#FF25A8FF"
                MaximumWidthRequest="170"/>
            <Button
                x:Name="CadrastroBtn"
                Text="Cadrastro" 
                HorizontalOptions="Fill" 
                Background="Gray"
                MaximumWidthRequest="170"/>
    </VerticalStackLayout>
</ContentPage>
