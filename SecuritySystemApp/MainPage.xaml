<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecuritySystemApp.MainPage">
    <VerticalStackLayout
            Padding="20,0"
            Spacing="25">
            <Image />
            <Button
                x:Name="LoginBtn"
                Text="Login" 
                HorizontalOptions="Fill" 
                Background="Blue"
                MaximumWidthRequest="170"/>
            <Button
                x:Name="CadrastroBtn"
                Text="Cadrastro" 
                HorizontalOptions="Fill" 
                Background="Gray"
                MaximumWidthRequest="170"/>
            <Button
                x:Name="HomeBtn"
                Text="Home" 
                HorizontalOptions="Fill" 
                Background="Green"
                MaximumWidthRequest="170"/>

            
            <!-- Switch para trocar tema (Claro ou Escuro) *MUDAR PARA A PÁGINA DE CONFIGURAÇÃO* -->
            <Label Text="Modo escuro" FontSize="20" HorizontalOptions="Center" />
            <Switch x:Name="ThemeSwitch" Toggled="OnThemeToggled" IsToggled="{Binding IsDarkMode}" />
    </VerticalStackLayout>
</ContentPage>
